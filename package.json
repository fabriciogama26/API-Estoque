{
  "name": "api-estoque",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel backend:dev frontend:dev",
    "backend:dev": "npm run dev -w backend",
    "backend:start": "npm run start -w backend",
    "backend:lint": "npm run lint -w backend",
    "frontend:dev": "npm run dev -w frontend",
    "frontend:build": "npm run build -w frontend",
    "frontend:lint": "npm run lint -w frontend",
    "build": "npm run build -w frontend",
    "release:patch": "npm version patch",
    "release:minor": "npm version minor",
    "release:major": "npm version major"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "recharts": "^3.2.1"
  }
}
