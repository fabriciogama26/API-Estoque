{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "buildCommand": "npm run build",
    "outputDirectory": "dist",
    
    "functions": {
        "api/**/*.js": {
            "runtime": "vercel-node@1.0.0",
            "memory": 1024,
            "maxDuration": 60
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/index"
        },
        {
            "source": "/(.*)",
            "destination": "/"
        }
    ]
}
